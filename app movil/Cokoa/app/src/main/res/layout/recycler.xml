<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:fitsSystemWindows="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tablero" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:layout_marginTop="90dp">
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="#ffffff"
                    card_view:cardCornerRadius="4dp">
                    <TextView
                        android:gravity="center"
                        android:padding="20dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="ACOMPAÑAMIENTO EN EDUCACION FISICA"
                        android:textSize="18sp" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout


                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_width="182dp"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:orientation="vertical">
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="1dp"
                            android:paddingBottom="1dp"
                            android:text="Periodos Anteriores:"
                            android:textColor="@color/primary_text"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:padding="1dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_gravity="left"
                                    android:textSize="8dp"
                                    android:textColor="@color/primary_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1º" />
                                <TextView
                                    android:textColor="@color/primary_text"
                                    android:id="@+id/txtPeriodo1"
                                    android:maxLength="3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4,3jjjj" />

                            </LinearLayout>
                            <LinearLayout
                                android:background="@drawable/border"
                                android:padding="1dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_gravity="left"
                                    android:textSize="8dp"
                                    android:textColor="@color/primary_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2º" />
                                <TextView
                                    android:textColor="@color/primary_text"
                                    android:id="@+id/txtPeriodo2"
                                    android:maxLength="3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.4" />

                            </LinearLayout>
                            <LinearLayout
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:padding="1dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_gravity="left"
                                    android:textSize="8dp"
                                    android:textColor="@color/primary_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3º" />
                                <TextView
                                    android:textColor="@color/primary_text"
                                    android:id="@+id/txtPeriodo3"
                                    android:maxLength="3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4,2" />

                            </LinearLayout>
                            <LinearLayout
                                android:padding="1dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:background="@drawable/border"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView

                                    android:layout_gravity="left"
                                    android:textSize="8dp"
                                    android:textColor="@color/primary_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4º" />
                                <TextView
                                    android:textColor="@color/primary_text"
                                    android:id="@+id/txtPeriodo4"
                                    android:maxLength="3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="---" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:padding="30dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/list_item_high_tew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promedio"
                        android:textColor="@color/secondary_text"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/txtPromedio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:maxLength="3"
                        android:text="4.1"
                        android:textSize="30sp" />
                    <TextView
                        android:id="@+id/alto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:text="BASICO"/>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="Ultimas Evaluaciones"
                    android:textColor="#dfdfdf"
                    android:textSize="30sp" />

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view_logro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="Reporte  de Notas"
                    android:textColor="#dfdfdf"
                    android:textSize="30sp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>