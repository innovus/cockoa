<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="9dp"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:background="#ffffff"
        android:layout_width="270dp"
        android:layout_height="110dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:gravity="center"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/id_text_prueba_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="11sp"
                        android:text="mensaje de prueba fragment"
                        />



                </LinearLayout>



            </LinearLayout>
            <TextView
                android:layout_gravity="left"
                android:id="@+id/id_text_nombre_docente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Prof: Martinez Pascuaza Janneth Del Carmen "
                android:textColor="@color/secondary_text"
                android:textSize="10sp" />
            <LinearLayout
                android:layout_gravity="left"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:layout_width="230dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="1dp"
                        android:paddingBottom="1dp"
                        android:text="Periodos Anteriores:"
                        android:textColor="@color/primary_text"
                        android:textSize="10sp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:padding="1dp"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="left"
                                android:textSize="8dp"
                                android:textColor="@color/primary_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1º" />
                            <TextView
                                android:textColor="@color/primary_text"
                                android:id="@+id/txtPeriodo1"
                                android:maxLength="3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4,3jjjj" />

                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/border"
                            android:padding="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="left"
                                android:textSize="8dp"
                                android:textColor="@color/primary_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2º" />
                            <TextView
                                android:textColor="@color/primary_text"
                                android:id="@+id/txtPeriodo2"
                                android:maxLength="3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.4" />

                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:padding="1dp"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="left"
                                android:textSize="8dp"
                                android:textColor="@color/primary_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3º" />
                            <TextView
                                android:textColor="@color/primary_text"
                                android:id="@+id/txtPeriodo3"
                                android:maxLength="3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4,2" />

                        </LinearLayout>
                        <LinearLayout
                            android:padding="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/border"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView

                                android:layout_gravity="left"
                                android:textSize="8dp"
                                android:textColor="@color/primary_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4º" />
                            <TextView
                                android:textColor="@color/primary_text"
                                android:id="@+id/txtPeriodo4"
                                android:maxLength="3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="---" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:paddingBottom="0dp"
                    android:padding="1.8dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/list_item_high_tew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promedio"
                        android:textColor="@color/secondary_text"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/txtPromedio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:maxLength="3"
                        android:text="4.1"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/alto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"

                        android:text="BÀSICO"
                        android:textSize="10sp" />

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>