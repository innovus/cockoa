<!DOCTYPE html>
<html ng-app="estudiantes">
<head>
	<title>Notas</title>
  <link href="../stylesheets/bootstrap.css" rel="stylesheet">
  <link href="../stylesheets/style.css" rel="stylesheet">
  <link rel="stylesheet"  href="../angular-bootstrap/ui-bootstrap-csp.css">

  <!-- Css j -->
  <link href="../stylesheets/metisMenu.min.css" rel="stylesheet">


    <!-- Custom CSS -->
    <link href="../stylesheets/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="../stylesheets/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>
<body ng-controller="materiasController">
	<div id="wrapper">
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
      <% include navbar %>
     
      <!-- barra lateral -->
      <div class="navbar-default sidebar" role="navigation">
        <div class="sidebar-nav navbar-collapse">
            <ul class="nav" id="side-menu">
              <li  ng-repeat="materia in materias"><a ng-click="getMateriasYLogros(materia)">{{materia.nombre_materia}} </a>
              </li>
            </ul>
        </div>
      </div>
                

    </nav>  


  <div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Notas</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <hr />

  <uib-tabset  active="activeTabIndex">


   
    <uib-tab index="$index" ng-repeat="periodo in periodos" heading="Periodo {{periodo.numero_periodo}}" ng-click="getPeriodoId($index)" active="2">
      <div class ="area" >
      <h4>{{materia_seleccionada.nombre_materia}}</h4>
      <h5>Docente: {{materia_seleccionada.nombrecompleto}}</h5>
      <div class ="materias" >
      <table class="table  table-bordered" >
        <thead>
          <tr>
              <th style="text-align:center;">Porcentaje</th>
              <th style="text-align:center;">Logros</th>
              <th style="text-align:center;" >Actividades</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="logro in logros">
            <td>{{logro.porcentaje_logro}} %</td>
            <td>{{logro.descripcion_logro}}</td>
            <td>
              <table class="table  table-bordered" >
                <thead>
                  <tr>
                    <th ng-repeat="actividad in logro.actividades"> A{{$index + 1 }} ({{actividad.porcentaje_actividad}}%)</th>
                   
                    <th>Final</th>
                  
                  </tr>

                </thead>
                <tbody>
                  <tr>
                    <th ng-repeat="actividad in logro.actividades">{{actividad.nota}}</th>

                    <th> {{logro.nota}} </th>
                  </tr>

                </tbody>
              </table>
            </td>
            
          </tr>
          <!-- <tr ng-repeat="materia in materias">
              <th>50%</th>
              <th>{{materia.nombre_materia}}</th>
              <th><a data-id="1" href="horarioatencion.html">{{materia.nombrecompleto}}</a></th>
              <th>2.3</th>
              <th>
                <ul>
                  <li ng-repeat="logro in materia.logros"> {{logro.nombre_logro}}</li>
                </ul>
              </th>
            
          </tr> 
        -->
        </tbody>
        <tr>
          <th>Final</th>
          <th style="text-align:right;"colspan="2"> 5 </th>
        </tr>
      </table>
      </div >
      

    </div>
    </uib-tab>
  </uib-tabset>

  <hr />


    

		


</div>
</div>


  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.js"></script>
  <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.3.2.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-resource.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-cookies.js"></script>
  
  <script src='../javascripts/scripts/controllers/materiasController.js'></script>

   <script src="../javascripts/j/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../javascripts/j/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="../javascripts/j/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="../javascripts/j/sb-admin-2.js"></script>

</body>
</html>